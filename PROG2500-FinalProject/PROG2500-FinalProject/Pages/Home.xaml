<Page x:Class="PROG2500_FinalProject.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG2500_FinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <StackPanel>
        <TextBlock Text="IMDB_Project - Your one-stop shop for great movie" FontSize="24" FontWeight="Bold"></TextBlock>
        <TextBlock Text="Please select a page to begin your movie journey" FontSize="22"></TextBlock>
        <Image Height="376" Width="726" Source="{StaticResource IMDBXNSCC}"/>
    </StackPanel>
    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="#FFF6C700" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="{x:Type ListView}">
            <Setter Property="Background" Value="#FFF6C700" />
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FFF6C700" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Page.Resources>
</Page>
